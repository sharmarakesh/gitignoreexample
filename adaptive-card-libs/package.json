{
  "name": "adaptive-card-libs",
  "version": "1.0.0",
  "description": "Custom Monaco Editor Bundler for AdaptiveCards",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ac-libs",
    "clean-source": "rm -rf public/dist/build/ac-libs",
    "copyMonacoEditorBuild": "cp -r ac-libs public/dist/build/",
    "build": "webpack --progress",
    "clean-build": "npm run clean && npm run build",
    "build-clean-copy": "npm run build && npm run clean-source && npm run copyMonacoEditorBuild"
  },
  "devDependencies": {
    "adaptivecards": "^2.3.0",
    "adaptivecards-designer": "^1.3.0",
    "copy-webpack-plugin": "^6.1.0",
    "css-loader": "^4.2.0",
    "file-loader": "^6.0.0",
    "markdown-it": "^11.0.1",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "keywords": [],
  "author": "Rakesh Sharma",
  "license": "ISC",
  "dependencies": {}
}
